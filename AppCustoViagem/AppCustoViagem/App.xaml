<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagem.App">
    
    <Application.Resources>
       

        
        
        <Style TargetType="NavigationPage">
            <Setter Property="BackgroundColor" Value="#cc0044" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="NavigationPage.BarBackgroundColor" Value="#ffffff" />
            <Setter Property="BarTextColor" Value="#cc0044"/>
        </Style>        

        <Style TargetType="Frame">
            <Setter Property="BackgroundColor" Value="#ffffff" />
            <Setter Property="HasShadow" Value="true" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0, 5, 0, 5" />
        </Style>

        <Style TargetType="Label" x:Key="Titulo">
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="TextTransform" Value="Uppercase" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="#cc0044" />
            <Setter Property="FontSize" Value="Large" />
        </Style>
 
    </Application.Resources>
</Application>